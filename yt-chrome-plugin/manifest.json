{
  "manifest_version": 3,
  "name": "YouTube Comment Insights",
  "version": "1.0",
  "action": { "default_popup": "popup.html" },
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": [
    "http://127.0.0.1:5002/*",
    "http://localhost:5002/*",
    "https://www.googleapis.com/*",
    "https://www.youtube.com/*"
  ]
}